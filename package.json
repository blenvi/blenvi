{
  "name": "blenvi",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "type-check": "turbo run type-check",
    "format": "prettier --write \"**/*.{ts,tsx,md,json,js,jsx,mjs,css,yaml,yml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json,js,jsx,mjs,css,yaml,yml}\"",
    "clean": "turbo run clean",
    "check": "npm run format:check && npm run lint && npm run type-check",
    "fix": "npm run format && npm run lint:fix",
    "postinstall": "test -d .git && husky || echo 'Skipping husky (not in git repository)'",
    "vercel:deploy": "vercel",
    "vercel:deploy:prod": "vercel --prod",
    "vercel:setup": "node scripts/setup-vercel.ps1"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "shadcn": "^3.5.1",
    "turbo": "^2.6.1",
    "typescript": "5.9.3"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "npm@11.6.4",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,css,md,yaml,yml}": [
      "prettier --write"
    ]
  }
}
